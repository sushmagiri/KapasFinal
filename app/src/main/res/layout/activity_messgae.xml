<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_messgae"
    android:layout_width="match_parent"
    android:background="@drawable/picture"
    android:layout_height="match_parent"
    tools:context="com.example.user.wlitlogin.Messgae">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_message"
       android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="Hello"
        android:textSize="24sp"

        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="Login"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:background="@drawable/edittext"
        android:layout_marginEnd="26dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_reg"
        android:layout_toStartOf="@+id/btn_reg" />

    <Button
        android:id="@+id/btn_reg"

        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textSize="14dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/edittext"
        android:layout_marginRight="13dp"
        android:textStyle="bold"
        android:layout_marginEnd="13dp"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_alignRight="@+id/txt_message"
        android:layout_alignEnd="@+id/txt_message"/>

</RelativeLayout>
